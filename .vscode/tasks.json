{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Lua file",
			"type": "shell",
			"command": "lua",
			"args": [
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Lisle test run",
			"type": "shell",
			"command": "lua",
			"args": [
				"lib/lsc.lua",
				"tests/main.le"
			],
			"group": {
				"kind": "test"
			}
		}
	]
}